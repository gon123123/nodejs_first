<h1>home page</h1>
<div class="mt-4">
  <div class="row">
    <div class="col-sm-6 col-lg-4">
      {{#each courses}}
        <div class="card card-courses-item">
          <a href="/courses/{{this.slug}}">
            <img
              src="{{this.image}}"
              class="card-img-top"
              alt="{{this.image}}"
            />
          </a>
          <div class="card-body">
            <a href="/courses/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>